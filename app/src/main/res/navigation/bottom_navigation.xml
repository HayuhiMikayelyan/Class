<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@id/classesFragment">

    <fragment
        android:id="@+id/classesFragment"
        android:name="com.example.aclass.home.classes.ClassesFragment"
        android:label="fragment_classes"
        tools:layout="@layout/fragment_classes" >
        <action
            android:id="@+id/action_classesFragment_to_joinToClassFragment2"
            app:destination="@id/joinToClassFragment2" />
        <action
            android:id="@+id/action_classesFragment_to_createClassFragment2"
            app:destination="@id/createClassFragment2" />
    </fragment>
    <fragment
        android:id="@+id/testCategoriesFragment"
        android:name="com.example.aclass.home.tests.categories.TestCategoriesFragment"
        android:label="fragment_tests_categories"
        tools:layout="@layout/fragment_tests_categories" >
        <action
            android:id="@+id/action_testCategoriesFragment_to_testsFragment"
            app:destination="@id/testsFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.aclass.home.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/testsFragment"
        android:name="com.example.aclass.home.tests.TestsFragment"
        android:label="fragment_tests"
        tools:layout="@layout/fragment_tests" >
        <action
            android:id="@+id/action_testsFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.aclass.home.tests.QuizFragment"
        android:label="fragment_quiz"
        tools:layout="@layout/fragment_quiz" >
        <action
            android:id="@+id/action_quizFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.aclass.home.tests.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" >
        <action
            android:id="@+id/action_resultFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
        <action
            android:id="@+id/action_resultFragment_to_testsFragment"
            app:destination="@id/testsFragment" />
    </fragment>
    <fragment
        android:id="@+id/createClassFragment2"
        android:name="com.example.aclass.home.classes.CreateClassFragment"
        android:label="fragment_create_class"
        tools:layout="@layout/fragment_create_class" />
    <fragment
        android:id="@+id/joinToClassFragment2"
        android:name="com.example.aclass.home.classes.JoinToClassFragment"
        android:label="fragment_join_to_class"
        tools:layout="@layout/fragment_join_to_class" />
</navigation>